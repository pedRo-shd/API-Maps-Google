<div class='basic-grey'>
<p id="notice"><%= notice %></p>
  <script>
      $.notify("<%= notice %>", "success");
    </script>

<h1>Listando Tipos de Contatos</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr style="background: <%= cycle('white', '#f0f0f5') %>" >
        <td><%= kind.description %></td>
        <td><%= link_to t('buttons.show'), kind %></td>
        <td><%= link_to t('buttons.edit'), edit_kind_path(kind) %></td>
        <td><%= link_to t('buttons.destroy'), kind, method: :delete, data: { confirm: t('messages.confirmed') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
<%= link_to 'Novo Contato', new_kind_path, class: "btn btn btn-primary" %>
<%= link_to 'Início', root_path, class: "btn btn-success" %>
</div>